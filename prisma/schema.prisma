

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model price {
  id          Int      @id @default(autoincrement())
  orderID     Int
  figure      Float
  quote       String
  description String
  created_at  DateTime 
}

model user {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  password      String
  profileImage  String?
  displays      display[]
}

model display {
  id          Int      @id @default(autoincrement())
  display_id  String   @unique
  type        String
  ipAddress   String   @db.VarChar(45)
  data        Json?
  user        user     @relation(fields: [userId], references: [id])
  userId      Int
  isActive    Boolean  @default(false)
}
